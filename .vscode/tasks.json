    "version": "2.0.0",
    "tasks": [
        {
            "label": "PNG from PDF",
            "type": "shell",
            "command": "convert -resize 25% -density 600 tests/test_cservicios.pdf img/csdatos.png"
        },
        {
            "label": "Build python package & reinstall",
            "type": "shell",
            "command": "python3.11 -m build && pip uninstall -y csus && pip install dist/*.whl"
        },
        {
            "label": "Tests",
            "type": "shell",
            "command": "cd tests && cservicios -f csdatos.yaml && cservicios -t -f csdatos.yaml && cd .."
        },
    ]
}